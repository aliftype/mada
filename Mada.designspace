              filename="instances/Mada-Black.ufo"
              postscriptfontname="Mada-Black"
              stylemapfamilyname="Mada Black"
              stylemapstylename="regular"
              >
      <location>
        <dimension name="Weight" xvalue="1000"/>
      </location>
    </instance>
  </instances>
</designspace>
